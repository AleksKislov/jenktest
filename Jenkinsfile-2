pipeline {
  agent any 
  environment {
    DB_URL=credentials('db-url')
    DB_USR=credentials('db-usr')
  }
  stages {
    stage('migrate') {
      steps {
        sh 'docker run --rm -v $WORKSPACE/sql:/flyway/sql flyway/flyway:10.4.0 -X -url=$DB_URL -defaultSchema=_flyway -schemas=_flyway -user=$DB_USR -password=$DB_USR migrate'
      }
    }
    stage('validate') {
      steps {
        sh 'docker run --rm -v $WORKSPACE/sql:/flyway/sql flyway/flyway:10.4.0 -X -url=$DB_URL -defaultSchema=_flyway -schemas=_flyway -user=$DB_USR -password=$DB_USR validate'
      }
    }
    stage('info') {
      steps {
        sh 'docker run --rm -v $WORKSPACE/sql:/flyway/sql flyway/flyway:10.4.0 -url=$DB_URL -defaultSchema=_flyway -schemas=_flyway -user=$DB_USR -password=$DB_USR info'
      }
    }
  }
}
