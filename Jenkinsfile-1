pipeline {
  agent any 
  stages {
    stage('Verify version') {
      steps {
     script {
                    def containerId = sh(script: 'docker run flyway/flyway:10.3.0 version', returnStdout: true).trim()
                    sh "docker wait $containerId"
                    sh "docker rm $containerId"
                }      
}
    }
  }
}
